{
  "name": "testing-deftly",
  "private": true,
  "dependencies": {
  },
  "devDependencies": {
    "chai"        : "^2.0.0",
    "mocha"       : "*",
    "mocha-eslint": "0.2.0",
    "blanket"     : "*"
  },
  "scripts": {
    "test" : "mocha; mocha --require blanket -R html-cov > coverage.html;",
    "NOTE" : "Must use npm run debug",
    "debug": "mocha --debug-brk;"
  },
  "config": {
    "blanket": {
      "pattern": "//\/[\\w-]+\\.js$/",
      "data-cover-never": ["node_modules"]
    }
  }
}